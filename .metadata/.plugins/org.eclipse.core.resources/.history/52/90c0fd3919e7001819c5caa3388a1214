var convertData = function (data) {		
    var res = [];
    for (var i = 0; i < data.length; i++) {
        var dataItem = data[i];        
        var toCoord = geoCoordMap[dataItem[0].name][0];
        var fromCoord = geoCoordMap[dataItem[1].name][0];
        
        if (fromCoord && toCoord) {
            res.push({
                fromName: dataItem[0].name,
                toName: dataItem[1].name,
                coords: [fromCoord, toCoord]
            });
        }
    }
    return res;
};

var color = ['#a6c84c', '#ffa022', '#46bee9'];
var series = [];
[['Riyadh', BJData]].forEach(function (item, i) {
    series.push({
        //name: item[0] + ' Top10',
        name: '',
        type: 'lines',
        zlevel: 1,
        effect: {
            show: true,
            period: 16,
            trailLength: 0.7,
            color: '#fff',
            symbolSize: 6
        },
        lineStyle: {
            normal: {
                color: color[i],
                width: 0,
                curveness: -0.02
            }
        },        
        data: convertData(item[1]) // ['Riyadh', 'India', [[116.4551,40.2539], [121.4648,31.2891]]]
    },
    {
        //name: item[0] + ' Top10',
        name: '',
        type: 'lines',
        zlevel: 2,
        symbol: ['none', 'none'],// was none, arrow
        symbolSize: 10,
        effect: {
            show: true,
            period: 16,
            trailLength: 0,
            symbol: planePath,
            symbolSize: 15
        },
        lineStyle: {
            normal: {
                color: color[i],
                width: 0, // was 1
                opacity: 0.6,
                curveness: -0.02
            }
        },
        data: convertData(item[1])
    },
    {
        //name: item[0] + ' Top10',
        name: '',
        type: 'effectScatter',
        coordinateSystem: 'geo',
        zlevel: 2,
        rippleEffect: {
            brushType: 'stroke'
        },
        label: {
            normal: {
                show: true,
                position: 'right',
                formatter: '{b}'
            }
        },
        symbolSize: function (val) {
            return val[2] / 8;
        },
        itemStyle: {
            normal: {
                color: color[i]
            }
        },
        data: item[1].map(function (dataItem) {
            return {
                name: dataItem[1].name,
                value: geoCoordMap[dataItem[1].name][0].concat([dataItem[1].value])
            };
        })						 
    });
});

